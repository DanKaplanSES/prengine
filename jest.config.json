{
	"clearMocks": true,
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*\\.ts",
		"!src/**/*\\.d\\.ts"
	],
	"coverageDirectory": "coverage",
	"coverageProvider": "v8",
	"moduleFileExtensions": [
		"js",
		"mjs",
		"cjs",
		"jsx",
		"cts",
		"mts",
		"ts",
		"tsx",
		"json",
		"node"
	],
	"moduleNameMapper": {
		"^(\\.\\.?/.*)\\.js$": [
			"$1.mts",
			"$0"
		]
	},
	"testEnvironment": "jsdom",
	"testMatch": [
		"**/?(*.)+(spec|test).(tsx|ts)"
	],
	"transform": {
		"\\.(tsx?|[mc]ts)$": ["ts-jest", {
			"useESM": true,
			"tsconfig": "tsconfig.spec.json"
		}]
	}
}
